<h1>Portfolio Items</h1>
<a href="portfolios/new">New portfolio</a>
<%= link_to "create new item", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.main_image  unless portfolio_item.main_image.nil? %>
	<%= link_to "Edit portfolio", edit_portfolio_path(portfolio_item) %>
	<%= link_to 'Delete this item', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>