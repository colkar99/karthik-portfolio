<h1>Portfolio Items</h1>
<a href="portfolios/new">New portfolio</a>
<%= link_to "create new item", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
	<p><%= portfolio_item.title %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.main_image  unless portfolio_item.main_image.nil? %>
	<%= link_to "Edit portfolio", edit_portfolio_path(portfolio_item) %>
<% end %>